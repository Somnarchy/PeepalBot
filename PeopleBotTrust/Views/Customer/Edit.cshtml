@model PeopleBotTrust.Models.CustomerModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Edit CustomerDetails</h3>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CustomerDetails.Id)

            <div class="form-group">
                <label class="control-label col-md-2">FirstName</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CustomerDetails.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerDetails.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">MiddleName</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CustomerDetails.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerDetails.MiddleName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">LastName</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CustomerDetails.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerDetails.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Address1</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CustomerDetails.Address1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerDetails.Address1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Address2</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CustomerDetails.Address2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerDetails.Address2, "", new { @class = "text-danger" })
                </div>
            </div>

                <div class="form-group">
                    <label class="control-label col-md-2">City</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CustomerDetails.City, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CustomerDetails.City, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">ZipCode</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CustomerDetails.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CustomerDetails.ZipCode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Phone</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CustomerDetails.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CustomerDetails.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-sm btn-success" />
                        <a class="btn btn-sm btn-warning" href="/CustomerDetails/">Cancel</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
