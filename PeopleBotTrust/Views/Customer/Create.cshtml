    @section scripts
{
        <script>
            $(document).ready(function () {

                $("#EnableAccountInfo").on("change", function () {
                    $this = $(this);
                    if ($this.is(":checked")) {
                        $("input[name^='AccountDetails.'], select[name^='AccountDetails.'] ").removeAttr("disabled");
                    } else {
                        $("input[name^='AccountDetails.'], select[name^='AccountDetails.']").attr("disabled", "disabled");
                    }
                });

            });
        </script>

        }
