@model PeopleBotTrust.Models.MemberModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="panel-title">Edit Member</h3>
    </div>
    <div class="panel-body">
        <form action="/Members/Edit/@Model.Id" method="post">
            @Html.AntiForgeryToken()
          <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

             <div class="form-group">
                <label for="FirstName" class="control-label col-md-2">FirstName</label>
                 <div class="col-md-10">
                    <input name="FirstName" id="FirstName" value="@(Model.FirstName)" class="form-label" />
                </div>
              </div>
             <div class="form-group">
                <label for="LastName" class="control-label col-md-2">LastName</label>
                    <div class="col-md-10">
                         <input name="LastName" id="LastName" value="@(Model.LastName)" class="form-label" />
                    </div>
             </div>

             <div class="form-group">
                <label for="Address" class="control-label col-md-2">Address</label>
                    <div class="col-md-10">
                        <input name="Address" id="Address" value="@(Model.Address)" class="form-label" />
                    </div>
             </div>

             <div class="form-group">
                 <label for="Myphone" class="control-label col-md-2">MyPhone</label>
                     <div class="col-md-10">
                         <input name="Myphone" id="Myphone" value="@(Model.MyPhone)" class="form-label" />
                     </div>
             </div>
              <div class="form-group">
                  <div class="col-md-offset-2 col-md-10">
                      <input type="submit" value="Save" class="btn btn-success" />
                      <a class="btn btn-sm btn-warning" href="/Members/">Cancel</a>
                  </div>
              </div>
           </div>
        </form>
    </div>
</div>
             

